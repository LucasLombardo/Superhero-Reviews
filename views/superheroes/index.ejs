<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Super Hero Reviews!</h1>
             <p>View our collection of distinguished superheroes from around the world (and out of it)!</p>
             <p>
                <a class="btn btn-primary btn-large" href="/superheroes/new">Add New Superhero</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% superheroes.forEach(function(superhero){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= superhero.image %>">
                   <div class="caption">
                       <h4><%= superhero.name %></h4>
                   </div>
                   <p>
                       <a href="/superheroes/<%= superhero._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
