<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= superhero.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/superheroes/<%= superhero._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="superhero[name]" value="<%= superhero.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="superhero[civname]" value="<%= superhero.civname %>">
                </div>                
                <div class="form-group">
                    <input class="form-control" type="text" name="superhero[location]" value="<%= superhero.location %>">
                </div>                
                <div class="form-group">
                    <input class="form-control" type="text" name="superhero[image]" value="<%= superhero.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="superhero[description]" value="<%= superhero.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/superheroes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

