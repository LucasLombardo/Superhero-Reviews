<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Superhero</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/superheroes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="superhero name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="civname" placeholder="civilian name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="superhero location">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <textarea id="textarea-input" name="description" class="form-control" placeholder="short description of superhero" required ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/superheroes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

